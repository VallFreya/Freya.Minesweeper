<Window x:Class="Freya.Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Freya.Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" 
        Width="Auto" Height="Auto" SizeToContent="WidthAndHeight" d:DesignWidth="600" d:DesignHeight="323.5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="270*"/>
        </Grid.RowDefinitions>
        <Label Name="Timer" HorizontalAlignment="Right" Height="23" Content="0" VerticalAlignment="Top" Width="42" Grid.Row="0" FontFamily="Stencil" Background="White" />

        <Label Name="CountMine" HorizontalAlignment="Left" Height="23" Content="0" VerticalAlignment="Top" Width="40" Grid.Row="0" FontFamily="Stencil"/>
        <UniformGrid Grid.Row="1" Name="mainGrid"></UniformGrid>
    </Grid>
</Window>
